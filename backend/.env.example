# backend/.env.example

# Puerto donde corre el servidor Express
PORT=4000

# URL de la base de datos PostgreSQL
DATABASE_URL=postgresql://usuario:password@localhost:5432/nombre_basedatos

# Clave secreta para firmar los JWT
JWT_SECRET=tu_clave_secreta_super_segura

# Tiempo de expiración del token JWT (ejemplo: 1d = 1 día)
JWT_EXPIRES_IN=1d

# Configuración opcional para el cors (dominios permitidos)
CORS_ORIGIN=http://localhost:3000

# Configuración de email (si usas para recuperación de contraseña o notificaciones)
EMAIL_HOST=smtp.tu-servidor.com
EMAIL_PORT=587
EMAIL_USER=usuario@tu-servidor.com
EMAIL_PASS=tu_password_email

# Otros ajustes que puedas necesitar
